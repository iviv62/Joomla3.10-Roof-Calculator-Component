<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">

	<name>com_calculator</name>
	<!-- The following elements are optional and free of formatting constraints -->
	<creationDate>July 2024</creationDate>
	<author>Ivelin Ivanov</author>
	<copyright>Copyright Info</copyright>
	<license>License Info</license>
	<!--  The version string is recorded in the components table -->
	<version>0.0.1</version>
	<!-- The description is optional and defaults to the name -->
	<description>Description of the Caclulator component ...</description>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>calculator.php</filename>
		<filename>router.php</filename>
		<folder>controllers</folder>
		<folder>views</folder>
		<folder>helpers</folder>
	</files>

	<administration>
		<!-- Administration Menu Section -->
		<menu link='index.php?option=com_calculator'>com_calculator</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>calculator.php</filename>
			
		</files>
	</administration>

	<modules>
        <module folder="modules" module="mod_selectcalculator" name="MOD_SELECTCALCULATOR" />
		<module folder="modules" module="mod_shedcalculator" name="MOD_SHEDCALCULATOR" />
    </modules>

	    <!-- Add this new section to include the modules folder -->
	<files folder="modules">
			<folder>mod_selectcalculator</folder>
			<folder>mod_shedcalculator</folder>
	</files>
	<scriptfile>script.php</scriptfile>

</extension>